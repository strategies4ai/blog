@page "/not-found"
@layout MainLayout

<section class="section hero-gradient">
    <div class="container-narrow">
        <div class="text-center py-16 animate-fade-in">
            <div class="w-20 h-20 rounded-full bg-muted flex items-center justify-center mx-auto mb-8">
                <svg width="40" height="40" class="text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <h1 class="text-4xl font-bold mb-4">Page Not <span class="gradient-text">Found</span></h1>
            <p class="text-xl text-muted-foreground mb-8 max-w-md mx-auto">
                Sorry, the content you are looking for does not exist or has been moved.
            </p>
            <div class="flex flex-wrap gap-4 justify-center">
                <a href="/" class="btn btn-primary">
                    <svg class="icon-sm" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    Go Home
                </a>
                <a href="/blog" class="btn btn-outline">
                    <svg class="icon-sm" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                    Browse Blog
                </a>
            </div>
        </div>
    </div>
</section>
