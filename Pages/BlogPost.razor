@page "/blog/{Slug}"

<PageTitle>@post?.Title - Strategies4AI</PageTitle>

<article class="section">
    <div class="container-narrow">
        @if (post != null)
        {
            <header class="mb-10 animate-fade-in">
                <a href="/blog" class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-primary transition-colors mb-6">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
                    </svg>
                    Back to Blog
                </a>
                <div class="flex flex-wrap gap-2 mb-4">
                    @foreach (var tag in post.Tags)
                    {
                        <span class="badge badge-default">@tag</span>
                    }
                </div>
                <h1 class="text-3xl md:text-4xl font-bold mb-6">@post.Title</h1>
                <div class="flex items-center gap-4 text-muted-foreground pb-6 border-b border-border">
                    <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        @post.Date.ToString("MMMM dd, yyyy")
                    </span>
                    <span class="text-border">•</span>
                    <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        @post.ReadTime min read
                    </span>
                </div>
            </header>

            <div class="prose animate-slide-up">
                @((MarkupString)post.Content)
            </div>

            <footer class="mt-12 pt-8 border-t border-border">
                <div class="card p-6">
                    <h3 class="text-lg font-semibold mb-4">Share this article</h3>
                    <div class="flex flex-wrap gap-3">
                        <a href="@($"https://twitter.com/intent/tweet?text={Uri.EscapeDataString(post.Title)}&url={Uri.EscapeDataString($"https://strategies4ai.com/blog/{Slug}")}")"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="btn btn-outline">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                            Share on X
                        </a>
                        <a href="@($"https://www.linkedin.com/sharing/share-offsite/?url={Uri.EscapeDataString($"https://strategies4ai.com/blog/{Slug}")}")"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="btn btn-outline">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                            Share on LinkedIn
                        </a>
                    </div>
                </div>
            </footer>
        }
        else
        {
            <div class="text-center py-16 animate-fade-in">
                <div class="w-16 h-16 rounded-full bg-muted flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold mb-3">Post Not Found</h1>
                <p class="text-muted-foreground mb-8">The blog post you're looking for doesn't exist.</p>
                <a href="/blog" class="btn btn-primary">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
                    </svg>
                    Back to Blog
                </a>
            </div>
        }
    </div>
</article>

@code {
    [Parameter]
    public string Slug { get; set; } = "";

    private BlogPostDetail? post;

    protected override void OnParametersSet()
    {
        post = GetPost(Slug);
    }

    private BlogPostDetail? GetPost(string slug)
    {
        return posts.FirstOrDefault(p => p.Slug == slug);
    }

    private List<BlogPostDetail> posts = new()
    {
        new BlogPostDetail
        {
            Title = "Getting Started with AI in Your Business",
            Slug = "getting-started-ai-business",
            Date = new DateTime(2024, 1, 15),
            Tags = new[] { "AI", "Business", "Strategy" },
            ReadTime = 8,
            Content = @"
                <p class='text-lg text-muted-foreground mb-6'>
                    Artificial Intelligence is no longer a futuristic concept—it's here, and it's transforming how businesses operate.
                    Whether you're a startup or an established enterprise, understanding how to leverage AI can give you a significant competitive advantage.
                </p>

                <h2>Why AI Matters for Your Business</h2>
                <p>
                    AI technologies can help automate repetitive tasks, uncover insights from data, improve customer experiences,
                    and enable entirely new products and services. The key is knowing where to start.
                </p>

                <h2>Key Considerations</h2>
                <ul>
                    <li>Start with a clear business problem, not the technology</li>
                    <li>Ensure you have quality data to work with</li>
                    <li>Build internal AI literacy across your organization</li>
                    <li>Consider ethical implications from the start</li>
                    <li>Start small, learn fast, and scale what works</li>
                </ul>

                <h2>Next Steps</h2>
                <p>
                    Ready to begin your AI journey? Start by auditing your current processes to identify opportunities
                    where AI could add value. Focus on areas with clear ROI potential and available data.
                </p>
            "
        },
        new BlogPostDetail
        {
            Title = "Understanding Large Language Models",
            Slug = "understanding-llms",
            Date = new DateTime(2024, 1, 10),
            Tags = new[] { "LLM", "Technology", "Deep Dive" },
            ReadTime = 12,
            Content = @"
                <p class='text-lg text-muted-foreground mb-6'>
                    Large Language Models (LLMs) have revolutionized natural language processing and are powering
                    a new generation of AI applications. Let's explore what they are and how they work.
                </p>

                <h2>What are LLMs?</h2>
                <p>
                    Large Language Models are neural networks trained on vast amounts of text data. They learn patterns
                    in language that allow them to generate human-like text, answer questions, write code, and much more.
                </p>

                <h2>Key Capabilities</h2>
                <ul>
                    <li>Natural language understanding and generation</li>
                    <li>Code generation and explanation</li>
                    <li>Translation and summarization</li>
                    <li>Question answering and reasoning</li>
                    <li>Creative writing and brainstorming</li>
                </ul>

                <h2>Limitations to Consider</h2>
                <p>
                    While powerful, LLMs have limitations. They can hallucinate facts, may reflect biases in training data,
                    and lack true understanding. Always validate important outputs and use them as tools, not oracles.
                </p>
            "
        },
        new BlogPostDetail
        {
            Title = "AI Ethics: Building Responsible Systems",
            Slug = "ai-ethics-responsible-systems",
            Date = new DateTime(2024, 1, 5),
            Tags = new[] { "Ethics", "Best Practices" },
            ReadTime = 10,
            Content = @"
                <p class='text-lg text-muted-foreground mb-6'>
                    As AI systems become more prevalent, ensuring they're developed and deployed ethically
                    is crucial. Here's how to build AI responsibly.
                </p>

                <h2>Core Principles</h2>
                <ul>
                    <li><strong>Fairness:</strong> Ensure AI doesn't discriminate against protected groups</li>
                    <li><strong>Transparency:</strong> Make AI decisions explainable where possible</li>
                    <li><strong>Privacy:</strong> Protect user data and respect consent</li>
                    <li><strong>Safety:</strong> Build systems that fail gracefully</li>
                    <li><strong>Accountability:</strong> Maintain human oversight and responsibility</li>
                </ul>

                <h2>Practical Steps</h2>
                <p>
                    Establish an AI ethics review process, audit your training data for biases,
                    document model decisions, and create feedback mechanisms for users affected by AI decisions.
                </p>
            "
        },
        new BlogPostDetail
        {
            Title = "Prompt Engineering: A Practical Guide",
            Slug = "prompt-engineering-guide",
            Date = new DateTime(2024, 1, 1),
            Tags = new[] { "Prompts", "Tutorial" },
            ReadTime = 15,
            Content = @"
                <p class='text-lg text-muted-foreground mb-6'>
                    Getting the best results from AI models requires skill in crafting effective prompts.
                    This guide will help you master prompt engineering.
                </p>

                <h2>Prompt Engineering Basics</h2>
                <p>
                    Prompt engineering is the practice of designing inputs that guide AI models to produce
                    desired outputs. It's part art, part science, and entirely learnable.
                </p>

                <h2>Key Techniques</h2>
                <ul>
                    <li>Be specific and provide context</li>
                    <li>Use examples (few-shot learning)</li>
                    <li>Break complex tasks into steps</li>
                    <li>Specify the desired output format</li>
                    <li>Iterate and refine based on results</li>
                </ul>

                <h2>Common Patterns</h2>
                <p>
                    Role prompting (""Act as...""), chain-of-thought (""Think step by step""), and
                    structured output (""Return JSON in this format..."") are powerful techniques
                    that work across many models.
                </p>
            "
        }
    };

    private class BlogPostDetail
    {
        public string Title { get; set; } = "";
        public string Slug { get; set; } = "";
        public DateTime Date { get; set; }
        public string[] Tags { get; set; } = Array.Empty<string>();
        public int ReadTime { get; set; }
        public string Content { get; set; } = "";
    }
}
