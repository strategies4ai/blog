@page "/blog/{Slug}"

<PageTitle>@post?.Title - Strategies4AI</PageTitle>

<article class="py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
            @if (post != null)
            {
                <header class="mb-8">
                    <a href="/blog" class="text-sm text-muted-foreground hover:text-foreground mb-4 inline-block">
                        &larr; Back to Blog
                    </a>
                    <div class="flex gap-2 mb-4">
                        @foreach (var tag in post.Tags)
                        {
                            <span class="badge badge-secondary">@tag</span>
                        }
                    </div>
                    <h1 class="text-4xl font-bold mb-4">@post.Title</h1>
                    <div class="flex items-center gap-4 text-muted-foreground">
                        <span>@post.Date.ToString("MMMM dd, yyyy")</span>
                        <span>@post.ReadTime min read</span>
                    </div>
                </header>

                <div class="prose prose-lg max-w-none">
                    @((MarkupString)post.Content)
                </div>

                <footer class="mt-12 pt-8 border-t border-border">
                    <h3 class="text-lg font-semibold mb-4">Share this article</h3>
                    <div class="flex gap-4">
                        <a href="@($"https://twitter.com/intent/tweet?text={Uri.EscapeDataString(post.Title)}&url={Uri.EscapeDataString($"https://strategies4ai.com/blog/{Slug}")}")"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="btn btn-outline">
                            Share on X
                        </a>
                        <a href="@($"https://www.linkedin.com/sharing/share-offsite/?url={Uri.EscapeDataString($"https://strategies4ai.com/blog/{Slug}")}")"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="btn btn-outline">
                            Share on LinkedIn
                        </a>
                    </div>
                </footer>
            }
            else
            {
                <div class="text-center py-12">
                    <h1 class="text-2xl font-bold mb-4">Post Not Found</h1>
                    <p class="text-muted-foreground mb-8">The blog post you're looking for doesn't exist.</p>
                    <a href="/blog" class="btn btn-primary">Back to Blog</a>
                </div>
            }
        </div>
    </div>
</article>

