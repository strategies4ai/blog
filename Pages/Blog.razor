@page "/blog"

<PageTitle>Blog - Strategies4AI</PageTitle>

<section class="py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold mb-4">Blog</h1>
            <p class="text-xl text-muted-foreground mb-12">
                Insights, tutorials, and thoughts on AI strategies and implementation.
            </p>

            <div class="space-y-8">
                @foreach (var post in blogPosts)
                {
                    <article class="card">
                        <div class="card-header">
                            <div class="flex gap-2 mb-2">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="badge badge-secondary">@tag</span>
                                }
                            </div>
                            <a href="@($"/blog/{post.Slug}")" class="hover:underline">
                                <h2 class="card-title">@post.Title</h2>
                            </a>
                            <p class="card-description">@post.Excerpt</p>
                        </div>
                        <div class="card-content">
                            <div class="flex items-center gap-4 text-sm text-muted-foreground">
                                <span>@post.Date.ToString("MMMM dd, yyyy")</span>
                                <span class="separator-vertical h-4"></span>
                                <span>@post.ReadTime min read</span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@($"/blog/{post.Slug}")" class="btn btn-outline">
                                Read Article &rarr;
                            </a>
                        </div>
                    </article>
                }
            </div>
        </div>
    </div>
</section>

